.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author-date image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-author-date text {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}

.post-title {
    font-size:34rpx;
    font-weight: bold;
    color:#333;
    margin-bottom: 10px;
    margin-left:10rpx;
}

.post-image{
    width:100%;
    height: 340rpx;
    margin: auto 0;
    margin-bottom:15px;
}

.post-content{
    color:#666;
    font-size:28rpx;
    margin-bottom: 20px;
    margin-left:20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}
.post-like{
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10rpx;
}

.post-like image{
    height: 16px;
    width: 16px;
    margin-right: 8px;
    vertical-align: middle;
}

.post-like text{
    vertical-align: middle;
    margin-right: 20px;
}
